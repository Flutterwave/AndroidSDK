<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardElevation="10dp"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/rave_cl"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#fbeed8">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="22dp"
            android:id="@+id/rave_payment_type_title_textView"
            android:ellipsize="end"
            android:letterSpacing="-0.01"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Pay with your Debit Cards"
            android:textColor="#4a4a4a"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/arrowIv2"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:id="@+id/arrowIv2"
            android:layout_width="13dp"
            android:layout_height="6dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="22dp"
            android:src="@drawable/collapsed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>